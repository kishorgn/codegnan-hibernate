<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0/EN" 
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
   
<hibernate-mapping>
	<class name="com.codegnan.entity.Employee" table="employee213">
		<id name="eId">
		   <generator class="increment"></generator>
		</id>
		<property name="name"/>
		<property name="email"/>
		<list name="addresses" cascade="all">
			<key column="eId"/>
			<index column="type"/>
			<one-to-many class="com.codegnan.entity.Address"/>
		</list>
	</class>
</hibernate-mapping>