<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0/EN" 
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
   
<hibernate-mapping>
    <class name="com.codegnan.entity.Employee" table="emp201">
    	<id name="id">
    		<generator class="increment"/>
    	</id>
    	<property name="name"/>
    	
    	<union-subclass name="com.codegnan.entity.RegularEmployee" table="regemp201">
    	   <property name = "salary"/>
    	   <property name = "bonus"/>
    	</union-subclass>
    	
    	<union-subclass name="com.codegnan.entity.ContractEmployee" table="conemp201">
    		<property name="payPerHr"/>
    		<property name="contractPeriod"/>
    	</union-subclass>
    </class>
</hibernate-mapping>